{
  "name": "clinic-queue-backend",
  "version": "1.0.0",
  "description": "Express.js backend API for ClinicQueue - Patient Appointment, Queue & Triage Management System",
  "main": "dist/app.js",
 "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:debug": "cross-env NODE_ENV=development ts-node-dev --inspect --respawn --transpile-only src/app.ts",
    "start:dev": "cross-env NODE_ENV=development ts-node src/app.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/app.js",
    "start:test": "cross-env NODE_ENV=test node dist/app.js",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node --max-old-space-size=1024 dist/app.js",
    "prebuild": "npm run clean",
    "build": "node --max-old-space-size=4096 node_modules/typescript/bin/tsc",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:test": "cross-env NODE_ENV=test npm run build",
    "postbuild": "echo 'Build completed successfully!'",

    "render-build": "npm install && npm run build",
    "render-start": "node --max-old-space-size=1024 dist/app.js",
    
    "docs:generate": "node scripts/generate-docs.js",
    "docs:serve": "npx http-server docs/ -p 8080",
    "docs": "npm run docs:generate && npm run docs:serve",
    "test": "cross-env NODE_ENV=test jest --config jest.config.js",
    "test:verbose": "cross-env NODE_ENV=test jest --config jest.config.js --verbose --colors",
    "test:watch": "cross-env NODE_ENV=test jest --watch --config jest.config.js --verbose --colors",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --config jest.config.js --verbose --colors",
    "test:dashboard": "node scripts/test-dashboard.js",
    "test:report": "npm run test:dashboard",
    "seed:dev": "cross-env NODE_ENV=development ts-node src/seed.ts",
    "seed:prod": "cross-env NODE_ENV=production node dist/seed.js",
    "seed:test": "cross-env NODE_ENV=test node dist/seed.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "clean:win": "if exist dist rmdir /s /q dist",
    "clean:unix": "rm -rf dist"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.10.1",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^16.3.0",
    "eslint": "^8.54.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "rimraf": "^6.1.2",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0",
    "zod": "^3.22.0"
  },
  "keywords": [
    "healthcare",
    "clinic",
    "queue-management",
    "triage",
    "express",
    "typescript",
    "mongodb"
  ],
  "author": "ClinicQueue Team",
  "license": "MIT"
}
