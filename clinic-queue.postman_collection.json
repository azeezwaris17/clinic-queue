              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('token', response.token);",
                  "    pm.environment.set('doctor_token', response.token);",
                  "    ",
                  "    // Set role-specific tokens based on login",
                  "    if (response.staff.role === 'admin') {",
                  "        pm.environment.set('admin_token', response.token);",
                  "    } else if (response.staff.role === 'doctor') {",
                  "        pm.environment.set('doctor_token', response.token);",
                  "    } else if (response.staff.role === 'nurse') {",
                  "        pm.environment.set('nurse_token', response.token);",
                  "    } else if (response.staff.role === 'receptionist') {",
                  "        pm.environment.set('receptionist_token', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
